{% set insertPositions = [
    [3,1], [5,1], [7,1],
    [1,3], [9,3],
    [1,5], [9,5],
    [1,7], [9,7],
    [3,9], [5,9], [7,9]
] %}

<div class="game-board remainingPathCard">

    {% for position in insertPositions %}
        {% if isToInsertMode and gamePlayerIndex == playerIndex %}
            <a class="tile-grid empty"
               style="grid-column: {{ position[0] }} ; grid-row: {{ position[1] }}"
               href="{{ path('insertRemainingPathCard', {'idGame': idGame, 'x': position[0], 'y': position[1]}) }}"
            >
            </a>
        {% endif %}
    {% endfor %}
</div>
